<?xml version="1.0" encoding="utf-8"?><extension type="module" version="2.5.0" client="site" method="upgrade">	<name>Mod Press</name>	<author>UGK</author>	<creationDate>Jul 2017</creationDate>	<copyright>Copyright (C) 2017 UGK.</copyright>	<license>GNU General Public License version 2 or later</license>	<authorEmail>informatyk@klomnice.pl</authorEmail>	<authorUrl>www.klomnice.pl</authorUrl>	<version>3.0.0</version>	<description>Moduł prezentuje ostatni plik pdf i jego okładkę w danym katalogu jako obrazek</description>	<files>		<filename module="mod_press">mod_press.php</filename>		<filename module="mod_press">index.html</filename>		<filename module="mod_press">helper.php</filename>		<filename module="mod_press">mod_press.xml</filename>		<folder>language</folder>		<folder>tmpl</folder>	</files>			<languages>		<language tag="pl-PL">language/pl-PL.mod_press.sys.ini</language>		</languages>							<config>			<fields name="params">			<fieldset name="BASIC">					<field	name="width" type="text" default="240 px" label="Width (px)" description="PARAMWIDTHPX" />				<field	name="height" type="text" default="333 px" label="Height (px)" description="PARAMHEIGHTPX" />				<field	name="folder" type="text" default="gazeta" label="Image Folder" description="PARAMIMAGEFOLDER" />			</fieldset>			</fields>		</config></extension>